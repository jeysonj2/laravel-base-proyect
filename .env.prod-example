APP_NAME="Laravel Base Project"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://my-laravel-base-project.test
APP_DOMAIN=my-laravel-base-project.test

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# PostgreSQL Database Configuration
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=laravel_production
DB_USERNAME=laravel_production
DB_PASSWORD=strong_password_here

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null

FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailserver
MAIL_PORT=25
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="no-reply@my-laravel-base-project.test"
MAIL_FROM_NAME="${APP_NAME}"

# JWT Configuration
JWT_SECRET=
JWT_TTL=10
JWT_REFRESH_TTL=480
JWT_ALGO=HS256
JWT_BLACKLIST_ENABLED=true
JWT_BLACKLIST_GRACE_PERIOD=0

PASSWORD_MIN_LENGTH=10
PASSWORD_SPECIAL_CHARS=!@#$%^&*()-_=+[]{}|;:,.<>?
PASSWORD_RESET_TOKEN_EXPIRY_MINUTES=30

# User Account Lockout Configuration
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPTS_WINDOW_MINUTES=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=60
MAX_LOCKOUTS_IN_PERIOD=3
LOCKOUT_PERIOD_HOURS=24

# Default Superadmin User Configuration
SUPER_ADMIN_EMAIL=superadmin@example.com
# Leave SUPER_ADMIN_PASSWORD empty to auto-generate a secure password during deployment
SUPER_ADMIN_PASSWORD=

# Let's Encrypt SSL Configuration
ACME_EMAIL=youremail@example.com
